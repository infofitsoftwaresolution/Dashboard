# ============================================
# AWS Configuration for Athena and S3
# ============================================
# Copy this file to .env and fill in your AWS credentials
# Get your credentials from: https://console.aws.amazon.com/iam/

# AWS Access Credentials (REQUIRED)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS Region (REQUIRED)
# Must match the region where your S3 bucket is located
# Common regions: us-east-1, us-west-2, eu-west-1, ap-south-1
AWS_REGION=us-east-1

# ============================================
# S3 Configuration
# ============================================
# Your S3 bucket name where Parquet files are stored
S3_BUCKET_NAME=your-s3-bucket-name

# S3 prefix/path where Parquet files are located
# Example: audit-trail-data/raw/
S3_PREFIX=audit-trail-data/raw/

# S3 bucket for Athena query results (can be same as S3_BUCKET_NAME)
S3_RESULTS_BUCKET=your-s3-bucket-name

# S3 prefix for Athena query results
S3_RESULTS_PREFIX=athena-results/

# ============================================
# Athena Configuration
# ============================================
# Athena database name (create this in Athena console first)
ATHENA_DATABASE_NAME=audit_trail_db

# Athena table name (created via SQL in Athena console)
ATHENA_TABLE_NAME=audit_trail_data

# Athena workgroup (usually 'primary')
ATHENA_WORKGROUP=primary

